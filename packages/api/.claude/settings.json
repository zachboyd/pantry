{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "npm run format",
            "timeout": 30000
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "build|compile|check|validate",
        "hooks": [
          {
            "type": "command", 
            "command": "npm run typecheck && npm run lint && npm run format",
            "timeout": 60000
          }
        ]
      }
    ]
  }
}