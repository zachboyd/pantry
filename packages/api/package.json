{
  "name": "@jeeves/api",
  "version": "1.0.0",
  "description": "NestJS backend API for Jeeves",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "docker:dev": "docker compose down && docker compose up -d && docker compose logs -f jeeves-api",
    "docker:dev:build": "docker compose down && docker compose up --build -d && docker compose logs -f jeeves-api",
    "docker:dev:down": "docker compose down",
    "db:migrate": "tsx src/database/migrate.ts",
    "db:migrate:down": "tsx src/database/migrate.ts --down",
    "db:migrate:create": "tsx src/database/create-migration.ts",
    "db:generate": "npx kysely-codegen --out-file src/generated/database.ts",
    "db:reset": "tsx src/database/reset.ts",
    "db:seed": "tsx src/database/seed.ts",
    "env:generate": "tsx scripts/generate-env.ts",
    "auth": "scripts/auth.sh",
    "schema:docs": "echo 'Visit https://dbdocs.io/ and upload docs/schema.dbml for online documentation'",
    "start:worker": "tsx src/worker.ts",
    "start:worker:dev": "tsx watch src/worker.ts",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "npm run test:unit && npm run test:integration",
    "test:run": "npm run test",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "test:integration": "NODE_ENV=test vitest run --project integration --reporter=verbose",
    "test:integration:watch": "NODE_ENV=test vitest --project integration",
    "test:unit": "vitest run --project unit",
    "test:docker": "NODE_ENV=test vitest run",
    "test:docker:watch": "NODE_ENV=test vitest"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.858.0",
    "@aws-sdk/client-ses": "^3.864.0",
    "@aws-sdk/s3-request-presigner": "^3.858.0",
    "@casl/ability": "^6.7.3",
    "@keyv/redis": "^5.0.0",
    "@nestjs/apollo": "^13.1.0",
    "@nestjs/common": "^11.1.3",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.3",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/graphql": "^13.1.0",
    "@nestjs/platform-express": "^11.1.3",
    "@nestjs/swagger": "^11.2.0",
    "@types/pg": "^8.15.4",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "better-auth": "^1.2.10",
    "cache-manager": "^7.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv": "^16.5.0",
    "graphql": "^16.11.0",
    "graphql-redis-subscriptions": "^2.7.0",
    "graphql-scalars": "^1.24.2",
    "graphql-type-json": "^0.3.2",
    "graphql-ws": "^6.0.6",
    "jose": "^6.0.11",
    "keyv": "^5.4.0",
    "kysely": "^0.28.2",
    "nestjs-pino": "^4.4.0",
    "pg": "^8.16.2",
    "pino-http": "^10.5.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "tsx": "^4.20.3",
    "uuid": "^11.1.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@apollo/server": "^4.12.2",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/testing": "^11.1.3",
    "@swc/core": "^1.13.3",
    "@types/graphql-type-json": "^0.3.5",
    "@types/js-yaml": "^4.0.9",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "js-yaml": "^4.1.0",
    "kysely-codegen": "^0.18.5",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.0.0",
    "supertest": "^7.1.4",
    "typescript": "^5.8.3",
    "unplugin-swc": "^1.5.5",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
