{
  "name": "@pantry/api",
  "version": "1.0.0",
  "description": "NestJS backend API for Pantry",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "docker:dev": "docker compose down && docker compose up -d && docker compose logs -f pantry-api",
    "docker:dev:build": "docker compose down && docker compose up --build -d && docker compose logs -f pantry-api",
    "docker:dev:down": "docker compose down",
    "db:migrate": "tsx src/database/migrate.ts",
    "db:migrate:down": "tsx src/database/migrate.ts --down",
    "db:migrate:create": "tsx src/database/create-migration.ts",
    "db:generate": "npx kysely-codegen --out-file src/generated/database.ts",
    "db:reset": "tsx src/database/reset.ts",
    "db:seed": "tsx src/database/seed.ts",
    "env:generate": "tsx scripts/generate-env.ts",
    "schema:docs": "echo 'Visit https://dbdocs.io/ and upload docs/schema.dbml for online documentation'",
    "start:worker": "tsx src/worker.ts",
    "start:worker:dev": "tsx watch src/worker.ts",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "vitest run",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.858.0",
    "@aws-sdk/s3-request-presigner": "^3.858.0",
    "@casl/ability": "^6.7.3",
    "@googlemaps/google-maps-services-js": "^3.4.2",
    "@hatchet-dev/pickaxe": "^0.1.9",
    "@hatchet-dev/typescript-sdk": "^1.9.0",
    "@keyv/redis": "^5.0.0",
    "@langchain/core": "^0.3.62",
    "@langchain/langgraph": "^0.3.6",
    "@langchain/openai": "^0.5.18",
    "@nestjs/apollo": "^13.1.0",
    "@nestjs/common": "^11.1.3",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.3",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/graphql": "^13.1.0",
    "@nestjs/platform-express": "^11.1.3",
    "@nestjs/swagger": "^11.2.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/pg": "^8.15.4",
    "@types/uuid": "^10.0.0",
    "ai": "^4.3.16",
    "apollo-server-express": "^3.13.0",
    "better-auth": "^1.2.10",
    "cache-manager": "^7.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv": "^16.5.0",
    "graphql": "^16.11.0",
    "jose": "^6.0.11",
    "jsonwebtoken": "^9.0.2",
    "keyv": "^5.4.0",
    "kysely": "^0.28.2",
    "nestjs-pino": "^4.4.0",
    "ollama-ai-provider": "^1.2.0",
    "pg": "^8.16.2",
    "pino-http": "^10.5.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "tsx": "^4.20.3",
    "uuid": "^11.1.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@apollo/server": "^4.12.2",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.3",
    "@swc/core": "^1.13.3",
    "@types/js-yaml": "^4.0.9",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.0.0",
    "js-yaml": "^4.1.0",
    "kysely-codegen": "^0.18.5",
    "openapi-typescript": "^7.8.0",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.0.0",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "unplugin-swc": "^1.5.5",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
