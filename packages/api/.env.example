# Application
PORT=3001
NODE_ENV=development

# Logging
LOG_LEVEL=debug

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Database
DATABASE_URL=postgresql://pantry_app:pantry_pass@localhost:5432/pantry

# Database Auto-Migration
AUTO_MIGRATE=true

# Better Auth
BETTER_AUTH_SECRET=your-secret-key-here-replace-with-random-string
BETTER_AUTH_URL=http://localhost:3001

# PowerSync JWT Configuration
POWERSYNC_PRIVATE_KEY=
POWERSYNC_PUBLIC_KEY=
POWERSYNC_JWT_EXPIRES_IN=5m
POWERSYNC_JWT_ISSUER=pantry-api

# OpenAI Configuration (required for AI agents)
OPENAI_API_KEY=your-openai-api-key-here