# Application
PORT=3001
NODE_ENV=development

# Logging
LOG_LEVEL=debug

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Database
DATABASE_URL=postgresql://jeeves_app:jeeves_pass@localhost:5432/jeeves

# Redis
REDIS_URL=redis://localhost:6379

# Database Auto-Migration
AUTO_MIGRATE=true

# API Configuration
API_URL=http://localhost:3001

# Better Auth
BETTER_AUTH_SECRET=your-secret-key-here-replace-with-random-string

# OpenAI Configuration (required for AI agents)
OPENAI_API_KEY=your-openai-api-key-here

# AWS Configuration
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=jeeves-dev

# AWS SES Configuration for emails
SES_FROM_ADDRESS=noreply@jeevesapp.dev
SES_CONFIGURATION_SET_NAME=jeeves-dev-config-set